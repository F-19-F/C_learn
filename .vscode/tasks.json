{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "[ -d  ${fileDirname}/compiled ] || mkdir ${fileDirname}/compiled; g++ ${file} -o ${fileDirname}/compiled/${fileBasenameNoExtension}.out -g `pkg-config --cflags --libs gtk+-2.0`",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}